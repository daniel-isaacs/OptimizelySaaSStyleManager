@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-100">
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <span class="text-xl font-semibold text-gray-900">Optimizely Style Manager</span>
                </div>
                <div class="flex items-center space-x-4">
                    <NavMenu />
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        @Body
    </main>
</div>

<div id="blazor-error-ui" class="fixed bottom-0 left-0 right-0 bg-red-600 text-white p-4 text-center hidden">
    An unhandled error has occurred.
    <a href="" class="reload underline ml-2">Reload</a>
    <a class="dismiss ml-2 cursor-pointer">Close</a>
</div>
